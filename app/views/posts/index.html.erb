<h1>Timeline </h1>

<%= form_for @post do |f| %>
  <%= f.label :body, 'Your post here' %>
  <%= f.text_field :body %>
  <%= f.submit "Submit" %>
<% end %>
<hr>

<% @posts.each do |post| %>
  <p><%= post.user.name %></p>
  <p><%= post.body %></p>
  <br>
  <span><%= post.likes.count %></span>
  <% if post.likes.find_by(user: current_user) %>
   <%= link_to "Unlike", like_path(post.id), :method => :delete %>
  <% else %>
   <%= link_to "Like",likes_path(:post_id => post.id), :method => :post %>
  <% end %>
  <hr>
<% end %>
